@model IEnumerable<Model.EF.Truyen>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layouts.cshtml";
    var ViewListSearchDetails = (List<Model.EF.Truyen>)ViewBag.ViewListSearchDetail;
    var HotStorys = (List<Model.EF.Truyen>)ViewBag.HotStory;
    var ViewStorys = (List<Model.EF.Truyen>)ViewBag.ViewStory;
    var ViewSearchStrings = ViewBag.ViewSearchString;
}


<div class="warpper mt-3">
    <div class="row">
        <div class="col-xl-9">
            <!-- Slide -->
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators d-none d-md-flex">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <!-- Updated Story -->
            <div>
                <div class="row  mt-3 ">
                    <div class=" col-6 " style="font-size: 20px;">@ViewBag.ViewSearchString</div>
                    <div class=" col-6 d-flex justify-content-end " style="font-size: 15px;">
                    </div>
                </div>
                <div class="row updated-Container ml-1 mt-2">
                    @foreach (var it in ViewListSearchDetails)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-4 col-6 p-0 image-box">
                            <a href="@it.MetaTitle-@it.Id_Truyen">
                                <img class="updated-story-image " src="@it.Avt_Truyen"
                                     alt="@it.Ten_Truyen">
                            </a>
                            <div class="image-content">
                                <p>@it.Ten_Truyen</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <hr>
            <!-- Hot Story -->
            
            <hr>
        </div>
        <!-- Top View Story -->
        <div class="col-xl-3 topRanking-Component">
            <div class="topRanking-background">
                <h5 class="topRanking-Title">Đọc nhiều nhất</h5>
                <div class="default-option mt-1">
                    <ul>
                        @foreach (var it in ViewStorys)
                        {
                            <li>
                                <div class="row">
                                    <div class="col-xl-4 col-sm-4 col-4 ml-2">
                                        <a href="@it.MetaTitle-@it.Id_Truyen">
                                            <img class="ranking-1_icon" src="@it.Avt_Truyen"
                                                 alt="">
                                        </a>
                                    </div>
                                    <div class="col-xl-7 col-sm-7 col-7">
                                        <div class="topView-story"><a href="@it.MetaTitle-@it.Id_Truyen">@it.Ten_Truyen</a></div>
                                        <p class="topView-author">@it.TacGia.Ten_TacGia</p>
                                        <p class="topview-viewer">@it.TotalView lượt xem</p>
                                    </div>
                                </div>
                                <hr style="height: 1px;width: 90%; background-color: #ffffff">
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>
</table>

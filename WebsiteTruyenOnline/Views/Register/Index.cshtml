
@model Model.EF.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="card-header"><h3 class="text-center font-weight-light my-4 mt">Thêm mới tài khoản người dùng</h3></div>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row mb-2 justify-content-center">
                <div class="col-md-4">
                    <div class="form-floating mb-3 mb-md-0">
                        <label for="inputName">Họ tên</label>
                        @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Vui lòng nhập họ tên" })

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating mb-3 mb-md-0">
                        <label for="inputName">Giới tính</label>
                        @Html.TextBoxFor(model => model.GioiTinh, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Vui lòng nhập giới tính" })

                    </div>
                </div>
            </div>
            <div class="row mb-2 justify-content-center">
                <div class="col-md-4">
                    <div class="form-floating mb-3 mb-md-0">
                        <label for="inputBirthDay">Ngày sinh</label>
                        @Html.TextBoxFor(model => model.NgaySinh, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Vui lòng nhập ngày sinh" })

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating mb-3 mb-md-0">
                        <label for="inputPhone">Số điện thoại</label>
                        @Html.TextBoxFor(model => model.SDT, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Vui lòng nhập số điện thoại" })

                    </div>
                </div>
            </div>
            <div class="row mb-2 justify-content-center">
                <div class="col-md-8">
                    <div class="form-floating mb-3 mb-md-0">
                        <label for="inputEmail">Email</label>

                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Vui lòng nhập email" })

                    </div>
                </div>
            </div>
            <div class="row mb-2 justify-content-center">
                <div class="col-md-8">
                    <div class="form-floating mb-3 mb-md-0">
                        <label for="inputUsername">Tên tài khoản</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Vui lòng nhập tên tài khoản" })

                    </div>
                </div>
            </div>
            <div class="row mb-2 justify-content-center">
                <div class="col-md-8">
                    <div class="form-floating mb-3 mb-md-0">
                        <label for="inputPassword">Mật khẩu</label>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Vui lòng nhập mật khẩu" })

                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="text-center">
                    <input type="submit" value="Thêm mới" class="btn btn-primary my-2" />
                </div>
            </div>
        </div>
    </div>

}




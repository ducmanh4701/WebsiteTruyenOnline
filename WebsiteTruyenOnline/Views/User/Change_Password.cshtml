@model Model.EF.User
@{
    ViewBag.Title = "Change_Password";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}

<div class="container box-shadow">
    <div class="d-flex mb-3 mt-2">
      <a style="font-size: 16px;" href="/Home/Index">Trang chủ</a>
      <a class="ml-2 mr-2">></a>
      <a style="font-size: 16px;" href="#">Thông tin chung</a>
    </div>
    <div class="row">
        <div class="col-md-3 ">
            <div class="collapse-container bg-dark pl-2 pt-2">
                <div class="collapse-container__avatar">
                    <img class="collapse-container__avatar__image" src="../assets/client/imageMainPage/icon.png" alt="">
                </div>
                <div class="collapse-container__username">
                    <div class="text-light">Tài khoản của</div>
                    <div class="text-light" style="font-weight: bold;" id="username">@Model.UserName</div>
                </div>
            </div>
            <div>
                <ul class="nav justify-content-center flex-column mt-2 nav-item--boder">
                    <li class="nav-item ">
                        <a class="nav-link " href="/User/Index/@Model.Id_User"><i class="fas fa-user"></i> Thông tin chung</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/User/Account_Info/@Model.Id_User"><i class="fas fa-info-circle"></i> Thông tin tài khoản</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/User/Following_Story/@Model.Id_User"><i class="fas fa-book"></i> Truyện theo dõi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link activting" href="/User/Change_Password/@Model.Id_User"><i class="fas fa-lock"></i> Cập nhật tài khoản</a>
                    </li>

                </ul>
            </div>
        </div>
        <head>
            <title>Cập nhật người dùng</title>
        </head>

        @using (Html.BeginForm("Change_Password", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id_User)
            <div class="form-horizontal">
                
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="card-body">
                    <div class="row mb-2 justify-content-center">
                        <div class="col-md-4">
                            <div class="form-floating mb-3 mb-md-0">
                                <label for="inputName">Họ tên</label>
                                @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Họ tên" })

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3 mb-md-0">
                                <label for="inputName">Giới tính</label>
                                @Html.TextBoxFor(model => model.GioiTinh, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Giới tính" })
                               
                            </div>
                        </div>
                    </div>
                    <div class="row mb-2 justify-content-center">
                        <div class="col-md-4">
                            <div class="form-floating mb-3 mb-md-0">
                                <label for="inputBirthDay">Ngày sinh</label>
                                @Html.TextBoxFor(model => model.NgaySinh, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Ngày sinh" })

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3 mb-md-0">
                                <label for="inputPhone">Số điện thoại</label>
                                @Html.TextBoxFor(model => model.SDT, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Số điện thoại" })

                            </div>
                        </div>
                    </div>
                    <div class="row mb-2 justify-content-center">
                        <div class="col-md-8">
                            <div class="form-floating mb-3 mb-md-0">
                                <label for="inputEmail">Email</label>
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Email" })

                            </div>
                        </div>
                    </div>
                    <div class="row mb-2 justify-content-center">
                        <div class="col-md-8">
                            <div class="form-floating mb-3 mb-md-0">
                                <label for="inputUsername">Tên tài khoản</label>
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Tên tài khoản" })
                                
                            </div>
                        </div>
                    </div>
                    <div class="row mb-2 justify-content-center">
                        <div class="col-md-8">
                            <div class="form-floating mb-3 mb-md-0">
                                <label for="inputPassword">Mật khẩu</label>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Mật khẩu" })

                            </div>
                        </div>
                    </div>
                    <div class="row mb-2 justify-content-center">
                        <div class="col-md-8">
                            <label for="inputStatus" class="my-2 mb-3 mb-md-0">Trạng thái</label>
                            @Html.CheckBoxFor(model => model.status, new { htmlAttributes = new { @class = "form-control mb-3 mb-md-0" } })
                            @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="text-center">
                            <input type="submit" value="Cập nhật" class="btn btn-primary my-2" />
                        </div>
                    </div>
                </div>
            </div>
        }

        
    </div>
</div>

